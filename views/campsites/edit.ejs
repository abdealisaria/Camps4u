<%- include("../partials/header.ejs") %>
<div class="row">
    <h1 style="text-align: center;">Edit <%= campsitedata.name %> </h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campsites/<%=campsitedata._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="campsite[name]" class="form-control" value="<%= campsitedata.name %>">
            </div>
            <div class="form-group">
                <input type="number" name="campsite[price]" class="form-control" value="<%= campsitedata.price %>">
            </div>
            <div class="form-group">
                <input type="url" name="campsite[image]" class="form-control" value="<%= campsitedata.image %>" id="">
            </div>
            <div class="form-group">
                <input type="text" name="campsite[location]" class="form-control" value="<%=campsitedata.location%>"
                    id="">
            </div>
            <div class="form-group">
                <input type="text" name="campsite[desc]" class="form-control" value="<%= campsitedata.desc%>">
            </div>
            <div class=" form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="btn btn-lg btn-warning btn-block" style="text-align: center;"
            href="/campsites/<%= campsitedata.id %>">Go back to
            campsite info</a>
    </div>
</div>
<%- include("../partials/footer.ejs") %>