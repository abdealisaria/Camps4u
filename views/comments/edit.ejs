<%- include("../partials/header.ejs") %>
<div class="row">
    <h1 style="text-align: center;">Edit your Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campsites/<%=campsiteid%>/comments/<%= commentdata._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" class="form-control" value="<%= commentdata.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="btn btn-lg btn-warning btn-block" style="text-align: center;" href="/campsites/<%= campsiteid %>">Go
            back to
            Camp info</a>
    </div>
</div>
